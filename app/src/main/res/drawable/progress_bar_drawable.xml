<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:startColor="#0BA511"
                android:centerColor="#0BA511"
                android:endColor="#0BA511"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:startColor="#0BA511"
                    android:centerColor="#0BA511"
                    android:endColor="#0BA511"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="4dp" />
                <gradient
                    android:startColor="#0BA511"
                    android:endColor="#0BA511"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>