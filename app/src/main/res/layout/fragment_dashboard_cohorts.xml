<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

        <RelativeLayout
            android:background="@drawable/border_button_gray"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dashboard_cohorts_search_edit_text"
                android:background="@null"
                android:hint="@string/general_search_cohorts"
                android:padding="2dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_search"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <com.muzima.view.custom.PagerSlidingTabStrip
            android:id="@+id/pager_indicator"
            custom:indicatorColor="@color/tab_indicator"
            custom:indicatorTextColor = "?attr/primaryTextColor"
            custom:indicatorHeight="5dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:overScrollMode="ifContentScrolls"
            android:background="?attr/tabBackgroundColor"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</FrameLayout>