<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/setup_configuration_container"
        android:padding="12dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/dark_smoke"
        app:cardBackgroundColor="?attr/primaryBackgroundColor"
        android:checkable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_marginStart="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/config_name"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/info_view"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_action_info"
                    android:visibility="gone"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/config_description"
                android:layout_marginBottom="6dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="6dp"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
