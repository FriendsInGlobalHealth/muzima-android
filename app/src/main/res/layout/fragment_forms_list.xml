<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/form_fragment_child_container"
        android:background="@color/hint_text_grey_opaque"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/forms_filter_strategy_view"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forms_sort_by_status"
                android:layout_alignParentStart="true"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/general_label_sort_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_toEndOf="@+id/forms_sort_by_status"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_arrow_down_dark"
                app:tint="?attr/onDarkBackgroundColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/form_list_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forms_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
