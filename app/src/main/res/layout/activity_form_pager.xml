<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?attr/primaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/primaryBackgroundColor"
            app:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/form_pager_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/primaryBackgroundColor"
                    app:title="@string/general_forms"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:background="@drawable/border_button_gray">

            <EditText
                    android:id="@+id/search_forms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/general_search_forms"
                    android:padding="6dp"
                    android:autofillHints="@string/general_search_forms"
                    android:inputType="text"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@string/general_search_forms"/>
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabSelectedTextColor="@color/primary_blue"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIndicatorHeight="3dp"
                app:tabIndicatorColor="@color/primary_blue">

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_display_all"/>

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_downloaded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_downloaded"/>

            <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_available_online"/>

        </com.google.android.material.tabs.TabLayout>
        <RelativeLayout
                android:background="@drawable/border_button_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottom_navigation"/>

            <include
                    layout="@layout/item_bottom_navigation"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/dashboard_home_form_filter_bottom_sheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
