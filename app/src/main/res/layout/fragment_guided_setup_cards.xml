<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/primary_blue_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_centerVertical="true"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/card_image_view"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="95dp"/>

        <TextView
                android:id="@+id/fragment_guided_setup_title_text_view"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView android:id="@+id/fragment_guided_setup_description_text_view"
                  android:textSize="18sp"
                  android:layout_marginTop="8dp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
