<HorizontalScrollView
    android:scrollbarSize="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dashboard_forms_incomplete_forms_view"
            android:background="@drawable/incomplete_forms_gradient"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingStart="6dp">

            <TextView
                android:id="@+id/dashboard_forms_incomplete_forms_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/primary_white"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/primary_white"
                android:text="@string/info_incomplete_form"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard_forms_complete_forms_view"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/complete_forms_gradient"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <TextView
                android:id="@+id/dashboard_forms_complete_forms_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:text="##"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/primary_white"
                android:text="@string/info_complete_form"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</HorizontalScrollView>
