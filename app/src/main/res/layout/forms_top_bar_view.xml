<HorizontalScrollView
    android:scrollbarSize="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dashboard_forms_incomplete_forms_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/incomplete_forms_gradient"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="6dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/dashboard_forms_incomplete_forms_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textColor="@color/primary_white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/primary_white"
                android:text="@string/info_incomplete_form"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard_forms_complete_forms_view"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/complete_forms_gradient"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="6dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/dashboard_forms_complete_forms_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:text="##"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/primary_white"
                android:text="@string/info_complete_form"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</HorizontalScrollView>
