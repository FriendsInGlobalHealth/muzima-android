<?xml version="1.0" encoding="utf-8"?>
<com.muzima.view.custom.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_form_layout"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.muzima.view.custom.CheckedRelativeLayout
        android:layout_toStartOf="@+id/item_form_end_container"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/last_edited_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_italic"
            android:maxLines="1"
            android:textColor="?attr/primaryTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_italic"
            android:maxLines="1"
            android:textColor="?attr/primaryTextColor"
            android:textSize="12sp" />

    </com.muzima.view.custom.CheckedRelativeLayout>

    <com.muzima.view.custom.CheckedRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/item_form_end_container"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp" />

    </com.muzima.view.custom.CheckedRelativeLayout>

    <com.muzima.view.custom.CheckedRelativeLayout
        android:id="@+id/item_form_end_container"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/form_name"
            android:textColor="?attr/primaryTextColor"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_italic"
            android:layout_width="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content"
            android:gravity="left"/>

        <TextView
            android:id="@+id/encounter_date"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_italic"
            android:layout_width="wrap_content"
            android:textColor="?attr/primaryTextColor"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentEnd="true"/>
    </com.muzima.view.custom.CheckedRelativeLayout>

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:background="@color/white_smoke_transparent"
        android:layout_height="1dp"
        android:visibility="gone"/>

</com.muzima.view.custom.CheckedLinearLayout>
